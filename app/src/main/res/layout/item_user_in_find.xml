<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="item"
            type="com.lovewandou.wd.functions.profile.ProfileVM" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="6dp"
            android:paddingTop="12dp"
            android:paddingRight="6dp"
            android:paddingBottom="12dp">

            <ImageView
                android:id="@+id/avatar_imageview"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="centerCrop"
                app:circleAvatar="@{item.userInfo.thumbnail}" />


            <TextView
                android:id="@+id/name_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_weight="1"
                android:scrollbarSize="16sp"
                android:text="@{item.userInfo.user_name}"
                android:textColor="@color/comTextColor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:id="@+id/attend_tv"
                android:layout_gravity="center_vertical"
                android:padding="4dp"
                android:text="@{item.userInfo.isAttendString}"
                android:textColor="@{item.userInfo.attendStringColor}"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:weightSum="3">

            <com.alien.newsdk.widget.imageview.RatioImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                app:imageUrl="@{item.userInfo.previewImage0}"
                app:ratio="1" />


            <com.alien.newsdk.widget.imageview.RatioImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                app:imageUrl="@{item.userInfo.previewImage1}" />

            <com.alien.newsdk.widget.imageview.RatioImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                app:imageUrl="@{item.userInfo.previewImage2}" />
        </LinearLayout>
    </LinearLayout>
</layout>